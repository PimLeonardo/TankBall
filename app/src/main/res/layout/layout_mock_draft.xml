<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingHorizontal="8dp"
    android:paddingVertical="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/rank_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Mock_draft"
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1" />

    <ImageView
        android:id="@+id/logo_team"
        app:layout_constraintStart_toEndOf="@+id/rank_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginStart="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/nome_jogador_text"
        tools:text="Nome do jogador"
        style="@style/Mock_draft"
        app:layout_constraintStart_toEndOf="@+id/logo_team"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/posicao_text"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/posicao_text"
        tools:text="PG"
        app:layout_constraintStart_toStartOf="@+id/nome_jogador_text"
        app:layout_constraintTop_toBottomOf="@+id/nome_jogador_text"
        app:layout_constraintBottom_toTopOf="@id/pontos_text"
        style="@style/Mock_draft_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time_text"
        tools:text="Oklahoma State"
        app:layout_constraintStart_toEndOf="@+id/posicao_text"
        app:layout_constraintTop_toBottomOf="@+id/nome_jogador_text"
        app:layout_constraintBottom_toTopOf="@id/pontos_text"
        android:layout_marginStart="8dp"
        style="@style/Mock_draft_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/idade_text"
        tools:text="18 anos"
        app:layout_constraintStart_toEndOf="@+id/time_text"
        app:layout_constraintTop_toBottomOf="@+id/nome_jogador_text"
        app:layout_constraintBottom_toTopOf="@id/pontos_text"
        android:layout_marginStart="8dp"
        style="@style/Mock_draft_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/altura_text"
        tools:text="Altura"
        app:layout_constraintStart_toEndOf="@+id/idade_text"
        app:layout_constraintTop_toBottomOf="@+id/nome_jogador_text"
        app:layout_constraintBottom_toBottomOf="@id/posicao_text"
        style="@style/Mock_draft_status"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/peso_text"
        tools:text="Peso"
        app:layout_constraintStart_toEndOf="@+id/altura_text"
        app:layout_constraintTop_toBottomOf="@+id/nome_jogador_text"
        app:layout_constraintBottom_toBottomOf="@id/posicao_text"
        style="@style/Mock_draft_status"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pontos_text"
        tools:text="Pontos"
        app:layout_constraintStart_toStartOf="@id/posicao_text"
        app:layout_constraintTop_toBottomOf="@id/posicao_text"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Mock_draft_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rebote_text"
        tools:text="Rebotes"
        app:layout_constraintStart_toEndOf="@id/pontos_text"
        app:layout_constraintTop_toBottomOf="@id/posicao_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        style="@style/Mock_draft_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/assistencia_text"
        tools:text="Assistencias"
        app:layout_constraintStart_toEndOf="@id/rebote_text"
        app:layout_constraintTop_toBottomOf="@id/posicao_text"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Mock_draft_status"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/block_text"
        tools:text="Blocks"
        app:layout_constraintStart_toEndOf="@id/assistencia_text"
        app:layout_constraintTop_toBottomOf="@id/posicao_text"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Mock_draft_status"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/roubos_text"
        tools:text="Roubos"
        app:layout_constraintStart_toEndOf="@id/block_text"
        app:layout_constraintTop_toBottomOf="@id/posicao_text"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Mock_draft_status"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>